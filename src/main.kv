#:include scroll_label.kv
#:import colorres color_res
#:import strres string_res

RootLayoutController:
    orientation: 'vertical'
    padding: 10
    ScrollableLabelSplitter:
        id: jsonPreview
        padding: 0, 0, 0, 10
        size_hint_x: 1
        size_hint_y: 0.25
        labelText: strres.get(strres.FIRST_RESULT)
        textContent: strres.get(strres.CHOOSE_DATA_FILE)
    ScrollableLabelSplitter:
        id: conversionPreview
        padding: 0, 0, 0, 10
        size_hint_x: 1
        size_hint_y: 0.25
        labelText: strres.get(strres.PREVIEW)
        textContent: strres.get(strres.SEE_PATTERN)
    BoxLayout
        orientation: 'vertical'
        padding: 0, 0, 0, 10
        size_hint_x: 1
        size_hint_y: 0.4
        Label: # label main
            size_hint_x: 1
            size_hint_y: None
            text: strres.get(strres.INPUT_PATTERN)
            size: (self.size[0], 25)
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        BoxLayout:
            padding: 1
            canvas:
                Color:
                    rgba: colorres.get_text_input_border_color()
                Rectangle:
                    pos: self.pos
                    size: self.size
            TextInput:
                id: patternText
                hint_text: strres.get(strres.TYPE_PATTERN)
                disabled: True
                background_color: colorres.get_text_input_bg_color()
                foreground_color: colorres.get_text_color()
                cursor_color: colorres.get_text_color()
                on_text: root.onPatternInputChange(self.text)
    BoxLayout:
        size_hint_x: 1
        size_hint_y: 0.1
        Button:
            id: fileChooserButton
            text: strres.get(strres.CHOOSE_FILE)
            on_release: root.onClickChooseFile()
        Button:
            id: convertButton
            text: strres.get(strres.CONVERT)
            on_release: root.onClickConvert()
