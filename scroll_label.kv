#:import res color_res

<ScrollableLabelSplitter>:
    BoxLayout:
        id: mainPanel
        orientation: 'vertical'
        Label: # label main
            id: label
            size_hint_x: 1
            size_hint_y: None
            size: (self.size[0], 25)
            text_size: self.size
            halign: 'left'
            valign: 'middle'
        BoxLayout: #border
            id: textPanel
            padding: 1
            size_hint_y: 0.9
            canvas:
                Color:
                    rgba: res.get_text_input_border_color()
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout: #text bg
                padding: 5
                canvas:
                    Color:
                        rgba: res.get_text_input_bg_color()
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ScrollView:
                    Label: # text
                        id: textContent
                        size_hint_y: None
                        text_size: self.size
                        markup: True
                        text: "..."
                        halign: 'left'
                        valign: 'top'   
                        height: self.texture_size[1]+15
                        text_size: self.width-5, None
